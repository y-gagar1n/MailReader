<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div ng-app="MailReaderApp" ng-controller="HomeController">
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a href="/" class="navbar-brand">Home</a>
				</div>
			</div>
		</div>
		<div class="main-content mail-table-container">
			<div class="mailboxes-container">
				<div ng-repeat="mailbox in mailboxes" ng-click="openMailbox(mailbox)">{{mailbox}}</div>
			</div>
			<div class="container body-content">
				<div ng-view></div>

				<hr/>
				<footer>
				</footer>
			</div>
		</div>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/angular")
	@*@RenderSection("scripts", required: false)*@
	@Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\"></script>", "~/bundles/MailReaderApp")
</body>
</html>